<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tictactoe.Controller">
   <children>
      <Pane layoutX="45.0" prefHeight="273.0" prefWidth="310.0">
         <children>
            <TextField fx:id="ColumnTextField" layoutX="169.0" layoutY="212.0" onKeyTyped="#onSetGridColumn" prefHeight="26.0" prefWidth="60.0" promptText="column" />
            <Text layoutX="23.0" layoutY="70.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome to Tic Tac Toe!">
               <font>
                  <Font size="26.0" />
               </font>
            </Text>
            <Text layoutX="39.0" layoutY="174.0" strokeType="OUTSIDE" strokeWidth="0.0" text="please choose the grid  that you want to have" />
            <TextField fx:id="rowTextField" layoutX="76.0" layoutY="214.0" onInputMethodTextChanged="#onSetGridRow" onKeyPressed="#onSetGridRow" onKeyTyped="#onSetGridRow" prefHeight="26.0" prefWidth="60.0" promptText="row" />
            <Text layoutX="149.0" layoutY="231.0" strokeType="OUTSIDE" strokeWidth="0.0" text="X" />
            <Text layoutX="124.0" layoutY="137.0" strokeType="OUTSIDE" strokeWidth="0.0" text="X">
               <font>
                  <Font size="40.0" />
               </font>
            </Text>
            <Text layoutX="163.0" layoutY="137.0" strokeType="OUTSIDE" strokeWidth="0.0" text="O">
               <font>
                  <Font size="40.0" />
               </font>
            </Text>
            <Button fx:id="StartButton" layoutX="132.0" layoutY="254.0" mnemonicParsing="false" onAction="#onClickStart" text="start" />
            <Text fx:id="WarningTextField" layoutX="107.0" layoutY="199.0" opacity="0.0" strokeType="OUTSIDE" strokeWidth="0.0" text="minimum of 3x3!" textAlignment="CENTER" />
         </children>
      </Pane>
   </children>
</AnchorPane>
